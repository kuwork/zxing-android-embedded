<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape
            android:gravity="center"
            android:shape="oval">
            <size
                android:width="5dp"
                android:height="5dp" />
            <corners android:radius="4dp" />
            <solid android:color="@color/border_color" />

        </shape>
    </item>
</layer-list>