<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <gradient
        android:angle="45"
        android:endColor="@color/carno_bg_normal"
        android:startColor="@color/carno_bg_normal" />

    <solid android:color="@color/carno_bg_normal" />

    <size
        android:height="20dp"
        android:width="20dp" />

    <stroke
        android:width="1dp"
        android:color="@color/carno_bg_normal" />

    <corners
        android:bottomLeftRadius="@dimen/btn_corner_radius"
        android:bottomRightRadius="@dimen/btn_corner_radius"
        android:topLeftRadius="@dimen/btn_corner_radius"
        android:topRightRadius="@dimen/btn_corner_radius" />

    <padding 
        android:bottom="@dimen/btn_corner_radius"
        android:left="@dimen/btn_corner_radius"
        android:right="@dimen/btn_corner_radius"
        android:top="@dimen/btn_corner_radius" />

</shape>