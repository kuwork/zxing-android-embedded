<resources>

    <!-- Base application theme. -->
    <style name="OverFlowMenuStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeTran.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorDrawerArrow</item>
    </style>

    <!-- 左边的箭头指示-->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- 状态栏和标题栏颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 标题颜色-->
        <item name="android:textColorPrimary">@color/colorTextColorPrimary</item>
        <!-- 箭头 -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- 溢出菜单按钮风格-->
        <!--<item name="actionOverflowButtonStyle">@style/OverFlowButtonStyle</item>-->
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/OverflowMenuTextAppearance</item>

        <item name="actionOverflowMenuStyle">@style/OverFlowMenuStyle</item>

        <!-- 菜单项点击selector-->
        <item name="actionBarItemBackground">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <!-- 左边的箭头指示-->
    <style name="AppThemeTran" parent="Theme.AppCompat">
        <!-- 状态栏和标题栏颜色-->
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- 标题颜色-->
        <item name="android:textColorPrimary">@color/colorTextColorPrimary</item>
        <!-- 箭头 -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- 溢出菜单按钮风格-->
        <!--<item name="actionOverflowButtonStyle">@style/OverFlowButtonStyle</item>-->
        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/OverflowMenuTextAppearance</item>

        <item name="actionOverflowMenuStyle">@style/OverFlowMenuStyle</item>

        <!-- 菜单项点击selector-->
        <item name="actionBarItemBackground">@color/colorAccent</item>

        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <!--溢出菜单文字样式 对ActionMenuView有效-->
    <style name="OverflowMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/overflowTextColor</item>
        <!-- 字体大小 -->
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="navTextStyle" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <!-- 字体颜色 -->
        <item name="android:textColor">@color/item_tv_color_01</item>
        <!-- 字体大小 -->
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorWindowBackground</item>
        <item name="android:textColorSecondary">@color/colorWindowBackground</item>
        <item name="actionMenuTextColor">@color/colorTextColorPrimary</item>
        <item name="android:colorBackground">@color/yellow</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/alertdialog_bg_top</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@drawable/alertdialog_bg_top</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 通用布局 -->

    <style name="layout_allFilled_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_allWraped_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_widthfilled_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_heightfilled_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- 页面菜单条目 -->
    <style name="item_layout">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="item_img_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="account_img_style">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--首页菜单-->
    <style name="grid_menu_icon_style">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="grid_menu_icon_style2">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="grid_menu_title_style" parent="@style/item_tv_style">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="grid_menu_title_style2" parent="@style/item_tv_style">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="grid_menu_desc_style2" parent="@style/item_tv_style">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">#9F9F9F</item>
    </style>
    <!-- 没有开启GPS提示窗图标 -->
    <style name="dialog_img_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="item_tv_title_style" parent="@style/layout_allWraped_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/item_tv_color_01</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="item_tv_style" parent="@style/layout_allWraped_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/item_tv_color_01</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/item_tv_color_02</item>
    </style>

    <style name="item_tv_second_style" parent="@style/layout_allWraped_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/item_tv_color_02</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="item_tv_third_style" parent="@style/layout_allWraped_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/item_tv_color_02</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="item_tv_forth_style" parent="@style/layout_allWraped_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/item_tv_color_02</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="btn_style" parent="item_tv_style">
        <item name="android:background">@drawable/login_btn_selector</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- 地图筛选菜单单选按钮样式 -->
    <style name="loc_radio_btn_style" parent="@style/layout_allWraped_style">
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/checkbox_circle_selector</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/loc_radiobtn_bg_selector</item>
        <item name="android:padding">@dimen/layout_Margin_5</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@drawable/checkbox_circle_textcolor_selector</item>
    </style>
    <!-- 闪光灯按钮样式 -->
    <style name="flash_btn_style" parent="@style/layout_allWraped_style">
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/flash_selector</item>
        <item name="android:padding">@dimen/layout_Margin_5</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="line_style">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="line_2_style">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/line_height</item>
    </style>

    <style name="item_ed_style" parent="@style/item_tv_style">
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/item_tv_color_01</item>
        <item name="android:textColorHint">@color/item_tv_color_04</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- 支付方式按钮样式 -->
    <style name="paytype_radio_btn_style" parent="@style/layout_widthfilled_style">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/delete_checkbox</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/layout_Margin_5</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/item_tv_color_01</item>
    </style>

    <!-- 设置里统一的右箭头图片样式 -->
    <style name="setting_img_style" parent="@style/layout_allWraped_style">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/text_size_16</item>
        <item name="android:layout_height">@dimen/text_size_16</item>
        <item name="android:layout_marginBottom">@dimen/layout_Margin_8</item>
        <item name="android:layout_marginRight">@dimen/layout_Margin_10</item>
        <item name="android:layout_marginTop">@dimen/layout_Margin_8</item>
        <item name="android:src">@mipmap/next</item>
    </style>

    <!-- 分享popWindow界面统一样式 -->
    <style name="share_popwindow_ll" parent="@style/layout_widthfilled_style">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/layout_Margin_10</item>
    </style>

    <!-- 广告animation的样式 -->
    <style name="bannner_animation_style">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- 半透明背景 -->
    <style name="mTransparent_bg">
        <item name="android:windowBackground">@color/pop_half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/bannner_animation_style</item>
    </style>

    <!-- Mapview 统一的按钮样式 -->
    <style name="mapview_float_btn_style">
        <item name="android:layout_width">34dp</item>
        <item name="android:layout_height">34dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">@dimen/layout_Margin_10</item>
        <item name="android:layout_marginTop">@dimen/layout_Margin_10</item>
        <item name="android:background">@drawable/loc_btn_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">3dp</item>
    </style>

    <style name="history_list_style" parent="layout_widthfilled_style">
        <item name="android:divider">@drawable/list_divider</item>
        <item name="android:background">@color/white</item>
        <item name="android:listSelector">?attr/selectableItemBackground</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <!--Grid样式-->
    <style name="grid_style" parent="@style/layout_widthfilled_style">
        <item name="android:horizontalSpacing">0.5dp</item>
        <item name="android:verticalSpacing">0.5dp</item>
        <item name="android:cacheColorHint">@color/transparentColor</item>
        <item name="android:background">@color/white</item>
        <item name="android:listSelector">?attr/selectableItemBackground</item>
    </style>

</resources>
