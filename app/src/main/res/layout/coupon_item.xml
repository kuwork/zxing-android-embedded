<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:couponViewAttr="http://schemas.android.com/apk/res"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_Margin_5"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/layout_Margin_5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/coupon_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <ImageView
                    android:layout_width="94dp"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/ic_coupon_car" />

                <TextView
                    android:id="@+id/couponTitle"
                    style="@style/item_tv_title_style"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top|right"
                    android:minEms="3"
                    android:text="180元"
                    android:textColor="#FCB636"
                    android:textSize="40dp" />

                <RelativeLayout
                    android:id="@+id/couponContentLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/couponDesc"
                        style="@style/item_tv_style"
                        android:layout_alignParentTop="true"
                        android:text="会员体验券"
                        android:textColor="#333333"
                        android:textSize="@dimen/text_size_18" />

                    <TextView
                        android:id="@+id/couponTimeLimit"
                        style="@style/item_tv_style"
                        android:layout_alignLeft="@+id/couponDesc"
                        android:layout_below="@+id/couponDesc"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/layout_Margin_10"
                        android:text="有效期至2015-05-06"
                        android:textColor="#666666"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/couponTimeLeft"
                        style="@style/item_tv_style"
                        android:layout_alignLeft="@+id/couponDesc"
                        android:layout_below="@+id/couponTimeLimit"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/layout_Margin_10"
                        android:text="2天后过期"
                        android:textColor="#FC6455"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/couponParkingType"
                        style="@style/item_tv_style"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="bottom"
                        android:gravity="left|bottom"
                        android:text="广东安居宝数码科技股份有限公司赠送"
                        android:textColor="#999999"
                        android:textSize="@dimen/text_size_12" />


                </RelativeLayout>

                <View
                    android:id="@+id/couponHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_corner_radius"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/coupon_bg_bottom" />

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/selectedLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/coupon_bg_sel"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/coupon_sel" />
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>