<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_widthfilled_style"
    android:paddingBottom="@dimen/layout_Margin_5"
    android:paddingTop="@dimen/layout_Margin_5">

    <TextView
        android:id="@+id/title"
        style="@style/item_tv_third_style"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/desc"
        android:text="@string/tip_coupon_business"
        android:textColor="@color/coupon_tv_red" />

    <TextView
        android:id="@+id/text_value"
        style="@style/item_tv_third_style"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/layout_Margin_5"
        android:text="-2.00"
        android:textColor="@color/coupon_tv_red" />

</RelativeLayout>
