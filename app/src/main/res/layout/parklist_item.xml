<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/parking_item_line_number_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/line_number"
            style="@style/item_tv_forth_style"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:ems="3"
            android:gravity="center"
            android:singleLine="false"
            android:text="10000" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_Margin_5"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/line_2_style"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/list_linenumber_bg" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/layout_widthfilled_style"
        android:orientation="vertical"
        android:padding="@dimen/layout_Margin_5">

        <RelativeLayout style="@style/layout_widthfilled_style">

            <TextView
                android:id="@+id/tv_parkname"
                style="@style/item_tv_style"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/layout_Margin_5"
                android:layout_toLeftOf="@+id/discount_ly"
                android:layout_weight="1"
                android:text="广东省安居宝科技园广东省安居宝科技园广东省安居宝科技园广东省安居宝科技园" />

            <LinearLayout
                android:id="@+id/disLayout"
                style="@style/layout_allWraped_style"
                android:layout_alignParentRight="true"
                android:gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/distance_tv"
                    style="@style/item_tv_third_style"
                    android:text="0米"
                    android:textColor="@color/header_bg_color" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_Margin_5"
                    android:src="@mipmap/next" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/discount_ly"
                style="@style/layout_allWraped_style"
                android:layout_marginRight="@dimen/layout_Margin_5"
                android:layout_toLeftOf="@+id/disLayout"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_discount"
                    style="@style/item_tv_third_style"
                    android:text="10.0折"
                    android:textColor="@color/orangered" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            style="@style/layout_widthfilled_style"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_online_pay"
                style="@style/layout_allWraped_style">

                <ImageView
                    android:id="@+id/support_online_pay_img"
                    style="@style/item_img_style"
                    android:layout_margin="0dp"
                    android:src="@mipmap/support_online_pay" />

                <TextView
                    android:id="@+id/support_online_pay_tv"
                    style="@style/item_tv_third_style"
                    android:text="在线支付" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navigation_btn"
                style="@style/layout_allWraped_style"
                android:layout_alignParentRight="true"
                android:clickable="true">

                <ImageView
                    style="@style/item_img_style"
                    android:layout_margin="0dp"
                    android:src="@mipmap/map" />

                <TextView
                    style="@style/item_tv_third_style"
                    android:layout_gravity="center"
                    android:singleLine="false"
                    android:text="地图导航"
                    android:textColor="#26aaf4" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/nearby_info_group"
            style="@style/layout_allFilled_style"
            android:onClick="true"
            android:orientation="vertical"></LinearLayout>

        <View
            style="@style/line_style"
            android:layout_marginTop="@dimen/layout_Margin_5" />
    </LinearLayout>

</LinearLayout>