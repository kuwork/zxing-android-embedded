<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_allFilled_style"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/login_bar"
        layout="@layout/header_btn_layout" />

    <LinearLayout
        android:id="@+id/layout_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_Margin_5"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="@dimen/layout_Margin_10"
        android:visibility="gone">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_question" />

        <TextView
            style="@style/item_tv_forth_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用说明"
            android:textColor="#999999" />
    </LinearLayout>

    <FrameLayout style="@style/layout_allFilled_style">

        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/activity_couponlist_listview"
            style="@style/layout_allFilled_style"
            fadeEdgetLength="0dp"
            android:divider="@null"
            android:listSelector="#00000000"
            android:visibility="visible" />


    </FrameLayout>
</LinearLayout>