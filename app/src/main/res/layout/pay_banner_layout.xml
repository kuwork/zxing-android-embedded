<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scaleImageViewAttr="http://schemas.android.com/apk/res-auto"
    style="@style/layout_widthfilled_style"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/share_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/layout_Margin_5"
        android:background="@drawable/btn_oval_selector"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            style="@style/item_img_style"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="0dp"
            android:src="@mipmap/ic_nav_share" />

        <TextView
            style="@style/item_tv_forth_style"
            android:layout_marginTop="3dp"
            android:text="优惠券"
            android:textColor="@color/pay_share_red" />
    </LinearLayout>

    <com.ajb.merchants.view.ScaleFrameLayout
        android:id="@+id/banner_layout"
        style="@style/layout_widthfilled_style"
        android:visibility="visible"
        scaleImageViewAttr:expectH="260"
        scaleImageViewAttr:expectW="720">

        <android.support.v4.view.ViewPager
            android:id="@+id/pop_banner_viewpager"
            style="@style/layout_widthfilled_style" />

        <LinearLayout
            android:id="@+id/popup_banner_circle_groups"
            style="@style/layout_widthfilled_style"
            android:layout_alignBottom="@id/pop_banner_viewpager"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/layout_Margin_5" />

        <LinearLayout
            android:id="@+id/close_layout"
            style="@style/mapview_float_btn_style"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right|top"
            android:padding="0dp">

            <ImageView
                android:id="@+id/img_camera"
                style="@style/layout_allWraped_style"
                android:layout_margin="3dp"
                android:src="@drawable/actionbar_close" />
        </LinearLayout>
    </com.ajb.merchants.view.ScaleFrameLayout>

</LinearLayout>