<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_tab"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/filter_bg_color">

        <com.ajb.anjubao.intelligent.view.SyncHorizontalScrollView
            android:id="@+id/mHsv"
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:fadingEdge="none"
            android:scrollbars="none">

            <RelativeLayout
                android:id="@+id/rl_nav"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:background="@color/filter_sel_color">

                <LinearLayout
                    android:id="@+id/rg_nav_content"
                    android:layout_width="fill_parent"
                    android:layout_height="38dip"
                    android:layout_alignParentTop="true"
                    android:background="@color/filter_bg_color"
                    android:orientation="horizontal" />

                <ImageView
                    android:id="@+id/iv_nav_indicator"
                    android:layout_width="1dip"
                    android:layout_height="5dip"
                    android:layout_alignParentBottom="true"
                    android:background="@color/filter_sel_color"
                    android:scaleType="matrix"
                    android:visibility="gone" />
            </RelativeLayout>
        </com.ajb.anjubao.intelligent.view.SyncHorizontalScrollView>

        <ImageView
            android:id="@+id/iv_nav_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="1dip"
            android:src="@mipmap/iv_navagation_scroll_left"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_nav_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="1dip"
            android:src="@mipmap/iv_navagation_scroll_right"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/mFirstListViewLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone">

            <ListView
                android:id="@+id/mListView"
                style="@style/history_list_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/hover_listview_item"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:textColor="@color/item_tv_color_02"
                android:textSize="16sp"
                android:visibility="invisible" />


        </FrameLayout>

        <ImageView
            android:layout_width="@dimen/layout_Margin_5"
            android:layout_height="match_parent"
            android:background="@drawable/shadow_right" />

        <FrameLayout
            android:id="@+id/mSecondListViewLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:visibility="gone">

            <GridView
                android:id="@+id/pop_city_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/history_list_style"
                android:numColumns="2" />

            <TextView
                android:id="@+id/dialog"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="40dp"
                android:background="@drawable/show_head_toast_bg"
                android:gravity="center"
                android:textColor="#ffffffff"
                android:textSize="30.0dip"
                android:visibility="invisible" />

            <com.ajb.anjubao.intelligent.view.SideBar
                android:id="@+id/sidebar"
                android:layout_width="30.0dip"
                android:layout_height="match_parent"
                android:layout_gravity="right|center" />
        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_Margin_5"
        android:background="@drawable/shadow_bottom" />


</LinearLayout>