<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_widthfilled_style"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/coupon_tip_ll"
        style="@style/layout_widthfilled_style"
        android:layout_marginTop="@dimen/text_size_12"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coupon_tip_tv"
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:background="@mipmap/coupon_red_bg"
            android:gravity="center"
            android:paddingRight="@dimen/layout_Margin_10"
            android:text="@string/tip_coupon_info"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />

        <com.ajb.anjubao.intelligent.view.MyListView
            android:id="@+id/couponListView"
            style="@style/layout_widthfilled_style"
            android:layout_marginLeft="@dimen/layout_Margin_15"
            android:layout_marginTop="-5dp"
            android:listSelector="@android:color/transparent"
            tools:showIn="@layout/pay_coupon_listview_item" />
    </LinearLayout>

    <View
        style="@style/line_style"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="@dimen/text_size_12" />

</LinearLayout>
