<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_allFilled_style"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context="com.ajb.merchants.activity.ModifyPhoneActivity">

    <include layout="@layout/header_btn_layout" />

    <ScrollView
        style="@style/layout_allFilled_style"
        android:scrollbars="none">

        <LinearLayout
            style="@style/layout_allFilled_style"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/layout_Margin_10"
                android:layout_marginTop="@dimen/layout_Margin_20"
                android:src="@mipmap/ic_phone_with_bg" />


            <LinearLayout
                style="@style/layout_widthfilled_style"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/item_tv_style"
                    android:layout_marginRight="@dimen/layout_Margin_5"
                    android:text="您当前的手机号为" />

                <TextView
                    android:id="@+id/tvPhone"
                    style="@style/item_tv_style"
                    android:minEms="5"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

            <TextView
                style="@style/item_tv_second_style"
                android:layout_marginTop="@dimen/layout_Margin_10"
                android:text="更换联系号码后，车场可以使用新的号码联系你"
                android:textColor="@color/item_tv_color_03" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/layout_Margin_10"
                android:layout_marginRight="@dimen/layout_Margin_10"
                android:layout_marginTop="@dimen/layout_Margin_20"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/item_layout"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@drawable/radius_bg_white"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/item_img_style"
                        android:layout_marginLeft="@dimen/layout_Margin_15"
                        android:layout_marginRight="@dimen/layout_Margin_15"
                        android:src="@mipmap/ic_phone" />

                    <EditText
                        android:id="@+id/edPhone"
                        style="@style/item_tv_style"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:hint="请输入手机号"
                        android:inputType="number"
                        android:maxLength="11"
                        android:phoneNumber="true"
                        android:textColorHint="@color/item_tv_color_04" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnVerification"
                    style="@style/btn_style"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_Margin_10"
                    android:layout_marginRight="0dp"
                    android:enabled="false"
                    android:minWidth="90dp"
                    android:text="验证"
                    android:textSize="@dimen/text_size_18" />
            </LinearLayout>

            <LinearLayout
                style="@style/item_layout"
                android:layout_margin="@dimen/layout_Margin_10"
                android:background="@drawable/radius_bg_white">

                <ImageView
                    style="@style/item_img_style"
                    android:layout_marginLeft="@dimen/layout_Margin_15"
                    android:layout_marginRight="@dimen/layout_Margin_15"
                    android:src="@mipmap/ic_verification" />

                <EditText
                    android:id="@+id/edVerification"
                    style="@style/item_ed_style"
                    android:layout_weight="1"
                    android:hint="请输入验证码"
                    android:paddingRight="@dimen/layout_Margin_5" />
            </LinearLayout>

            <Button
                android:id="@+id/btnConfirmModity"
                style="@style/btn_style"
                android:layout_marginTop="@dimen/layout_Margin_10"
                android:enabled="false"
                android:text="确认更换" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
