<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    style="@style/layout_widthfilled_style"
    android:background="@drawable/layout_border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">

        <ImageView
            android:id="@+id/item_car_img"
            style="@style/item_img_style"
            android:layout_centerVertical="true"
            android:src="@mipmap/item_car" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_toRightOf="@id/item_car_img"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_carnum_state_ll"
                style="@style/layout_allWraped_style"
                android:layout_gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_carnum"
                    style="@style/item_tv_style"
                    android:layout_gravity="center_vertical"
                    android:text="粤A123456" />

                <TextView
                    android:id="@+id/tv_car_state"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/layout_Margin_15"
                    android:background="@drawable/carno_state_unrecognized_bg"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:text="未认证"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_month_service_state"
                style="@style/item_tv_third_style"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/layout_Margin_5" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btn_carcancle_ll"
        style="@style/layout_allWraped_style"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            style="@style/item_img_style"
            android:layout_marginRight="@dimen/layout_Margin_5"
            android:background="@mipmap/de" />

    </LinearLayout>

    <com.ajb.merchants.view.SlideSwitch
        android:id="@+id/carnum_state_switch"
        android:layout_width="50dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/layout_Margin_10"
        android:checked="false"
        slideswitch:shape="circle"
        slideswitch:themeColor="@color/colorAccent" />


</RelativeLayout>