<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_notification"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/downLoadIcon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/jinduTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/downLoadIcon"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/downLoadIcon"
        android:text="@string/downloadProgress" />

    <TextView
        android:id="@+id/progressPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/downLoadIcon"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@+id/jinduTextView"
        android:text="" />

    <TextView
        android:id="@+id/progressPercent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/downLoadIcon"
        android:layout_alignLeft="@+id/downLoadProgressss"
        android:layout_alignRight="@+id/downLoadProgressss"
        android:layout_below="@+id/downLoadProgressss"
        android:gravity="center"
        android:text="" />

    <ProgressBar
        android:id="@+id/downLoadProgressss"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jinduTextView"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_toRightOf="@+id/downLoadIcon" />

</RelativeLayout>