<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scaleImageViewAttr="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/header_btn_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_mypurse_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_charge"
                style="@style/btn_style"
                android:background="@drawable/login_btn_selector"
                android:text="充值"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_reflect"
                style="@style/btn_style"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/login_btn_selector"
                android:text="我的收益"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/activity_myburse_bill"
                style="@style/btn_style"
                android:background="@drawable/login_btn_selector"
                android:text="消费明细"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:visibility="visible" />

            <!--
                 <TextView
                android:id="@+id/activity_myburse_bill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_gravity="center_horizontal"
                android:text="查看我的钱包消费明细"
                android:textColor="@drawable/change_color"
                android:textSize="18dp"
                android:textStyle="bold" />
            -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_mypurse_btn"
            android:orientation="vertical">

            <com.ajb.anjubao.intelligent.view.ScaleImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/mypurse_bg_01"
                scaleImageViewAttr:expectH="459"
                scaleImageViewAttr:expectW="1080" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_Margin_10"
                android:orientation="vertical">

                <TextView
                    style="@style/item_tv_style"
                    android:gravity="center_horizontal"
                    android:text="账户余额"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/layout_Margin_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/burse_balance"
                        style="@style/item_tv_style"
                        android:text="00.00"
                        android:textSize="30dp"
                        android:textStyle="bold" />

                    <TextView
                        style="@style/item_tv_style"
                        android:text="元"
                        android:textSize="30dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>