<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_widthfilled_style"
    android:orientation="horizontal"
    android:paddingBottom="2dp"
    android:paddingLeft="@dimen/layout_Margin_5"
    android:paddingRight="@dimen/layout_Margin_5"
    android:paddingTop="2dp" >

    <TextView
        android:id="@+id/pop_around_lv_text"
        style="@style/item_tv_third_style"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:maxWidth="120dp"
        android:singleLine="true"
        android:text="剩余车位剩余"
        android:textColor="@color/item_tv_color_02" />

    <TextView
        android:id="@+id/pop_around_lv_number"
        style="@style/item_tv_third_style"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/layout_Margin_5"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:singleLine="true"
        android:text="13个"
        android:textColor="@color/black" />

</LinearLayout>