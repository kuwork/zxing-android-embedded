<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="20dp"
    android:background="@drawable/alertdialog_bg_top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnlayoutUpdate"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/layout_Margin_10"
        android:layout_marginRight="@dimen/layout_Margin_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialogTitle"
            style="@style/item_tv_style"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginLeft="@dimen/layout_Margin_5"
            android:layout_marginRight="@dimen/layout_Margin_5"
            android:gravity="center"
            android:text="标题"
            android:textSize="@dimen/text_size_20" />

        <ImageView
            android:id="@+id/cancel_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/layout_Margin_10"
            android:scaleType="centerCrop"
            android:src="@drawable/actionbar_close" />

    </RelativeLayout>


    <LinearLayout
        style="@style/item_layout"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/layout_Margin_15"
        android:layout_marginRight="@dimen/layout_Margin_15"
        android:background="@drawable/layout_border_edittext_bg"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/edCard"
            style="@style/item_ed_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="left|center_vertical"
            android:hint="@string/tip_input_card"
            android:inputType="numberSigned"
            android:maxLength="6"
            android:paddingLeft="@dimen/layout_Margin_15"
            android:paddingRight="@dimen/layout_Margin_15" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnlayoutUpdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/layout_Margin_15"
        android:layout_marginRight="@dimen/layout_Margin_15"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/layout_Margin_30"
            android:layout_marginTop="@dimen/layout_Margin_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/sure_btn"
                style="@style/btn_style"
                android:layout_height="50dp"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/sure_btn_tv"
                    style="@style/item_tv_title_style"
                    android:text="@string/action_ok"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>