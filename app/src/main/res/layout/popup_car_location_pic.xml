<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    style="@style/layout_allFilled_style"
    android:background="@color/pop_half_transparent">

    <LinearLayout
        style="@style/layout_widthfilled_style"
        android:layout_centerInParent="true"
        android:layout_margin="50dp"
        android:background="@drawable/alertdialog_bg_top"
        android:orientation="vertical">

        <FrameLayout
            style="@style/item_tv_style"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/car_location_pic_del"
                style="@style/layout_allWraped_style"
                android:layout_height="match_parent"
                android:layout_gravity="left|center_vertical"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:orientation="horizontal"
                android:padding="@dimen/layout_Margin_5">

                <ImageView
                    style="@style/item_img_style"
                    android:layout_margin="0dp"
                    android:src="@mipmap/de" />

                <TextView
                    style="@style/item_tv_style"
                    android:gravity="center"
                    android:text="删除" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                style="@style/item_tv_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="照片预览" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_gray" />

        <FrameLayout
            style="@style/layout_widthfilled_style"
            android:gravity="center_horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/car_location_pic"
                style="@style/layout_allFilled_style" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cancel_btn"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/alertdialog_cancel_selector"
                android:gravity="center">

                <TextView
                    style="@style/item_tv_style"
                    android:text="关闭" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sure_btn"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/alertdialog_ok_selector"
                android:gravity="center">

                <TextView
                    style="@style/item_tv_style"
                    android:text="重拍"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>