<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pop_half_transparent">

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/popup_around_header"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:id="@+id/popup_header_bg_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/layout_Margin_10"
                android:background="#E6FFFFFF"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/popup_header_line"
                    style="@style/line_style"
                    android:background="@color/yellow" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pack_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/packname_tv"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/popup_header_bg_layout"
                android:layout_marginRight="@dimen/layout_Margin_10">

                <ImageView
                    android:id="@+id/packMember"
                    android:layout_width="32dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="@dimen/layout_Margin_10"
                    android:layout_marginTop="-2dp"
                    android:src="@mipmap/wechat" />

                <TextView
                    android:id="@+id/packDis_tv"
                    style="@style/item_tv_second_style"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:text="0.32km"
                    android:textColor="@color/header_bg_color" />

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_Margin_5"
                    android:src="@mipmap/next" />
            </LinearLayout>

            <TextView
                android:id="@+id/packname_tv"
                style="@style/item_tv_style"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/popup_header_bg_layout"
                android:layout_marginLeft="@dimen/layout_Margin_10"
                android:layout_toLeftOf="@id/pack_layout"
                android:gravity="center_vertical"
                android:text="安居宝停车场安居宝停车场" />
        </RelativeLayout>

        <LinearLayout
            style="@style/layout_widthfilled_style"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/popup_around_listview"
                style="@style/layout_widthfilled_style"
                android:orientation="vertical" />

            <View
                style="@style/line_style"
                android:layout_height="2dp" />

            <TextView
                android:id="@+id/navigation_btn"
                style="@style/item_layout"
                android:gravity="center"
                android:text="导航到该车场"
                android:textColor="#00aae9"
                android:textSize="@dimen/text_size_18"></TextView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/contentLayout"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"></LinearLayout>

</RelativeLayout>