<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scaleImageViewAttr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_allFilled_style"
    android:fitsSystemWindows="true"
    tools:context="com.ajb.anjubao.intelligent.activity.PopupWindowBannerActivity">


    <FrameLayout
        style="@style/layout_widthfilled_style"
        android:layout_centerInParent="true"
        android:paddingBottom="55dp">

        <LinearLayout
            style="@style/layout_allWraped_style"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/layout_Margin_20"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pop_home_banner_close_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/pop_icon_close" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/white" />
        </LinearLayout>

        <com.ajb.merchants.view.ScaleFrameLayout
            style="@style/layout_widthfilled_style"
            android:layout_marginLeft="@dimen/layout_Margin_15"
            android:layout_marginRight="@dimen/layout_Margin_15"
            android:layout_marginTop="50dp"
            scaleImageViewAttr:expectH="980"
            scaleImageViewAttr:expectW="840">

            <android.support.v4.view.ViewPager
                android:id="@+id/pop_banner_viewpager"
                style="@style/layout_widthfilled_style" />

            <LinearLayout
                android:id="@+id/popup_banner_circle_groups"
                style="@style/layout_widthfilled_style"
                android:layout_alignBottom="@id/pop_banner_viewpager"
                android:layout_gravity="bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/layout_Margin_5" />

        </com.ajb.merchants.view.ScaleFrameLayout>
    </FrameLayout>

</RelativeLayout>
