<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/ly_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/im_iocn"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/default_avatar" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="13dp"
            android:layout_weight="1"
            android:text="张三1111"
            android:textColor="#333333" />

        <ImageView
            android:id="@+id/btn_edit"
            android:layout_width="23dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:background="@mipmap/account_edit"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"

            />

        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="23dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:focusable="false"
            android:clickable="false"
            android:layout_marginRight="10dp"
            android:focusableInTouchMode="false"
            android:background="@mipmap/account_delete" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f2f2f2"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:visibility="gone"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:focusable="false"
        android:focusableInTouchMode="false"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车场位置 :"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:textSize="16dp"
                android:textColor="#333333"
                />
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细信息详细信息"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="17dp"
                android:textSize="16dp"
                android:textColor="#606060"
                />


        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户权限 :"
            android:layout_marginTop="17dp"
            android:textSize="16dp"
            android:layout_marginLeft="15dp"
            android:textColor="#333333"
            />
    </LinearLayout>
    <GridView
        android:id="@+id/gd_competence"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:numColumns="2"
        android:focusable="false"
        android:padding="12dp"
        android:focusableInTouchMode="false"
        android:horizontalSpacing="12dp"
        android:verticalSpacing="12dp"
        >
    </GridView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:paddingTop="17dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxxxxxxxx"
            android:paddingLeft="15dp"
            android:textColor="#606060"
            android:paddingTop="12dp"
            android:textSize="16dp"
            android:paddingBottom="17dp"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        />
</LinearLayout>