<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeTran.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="OverFlowButtonStyle" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:actionOverflowButtonStyle">@style/OverFlowButtonStyle.OverFlow</item>
        <item name="actionOverflowButtonStyle">@style/OverFlowButtonStyle.OverFlow</item>
    </style>

    <style name="OverFlowButtonStyle.OverFlow">
        <item name="background">@drawable/selector_btn</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="OverFlowMenuStyle" parent="Base.Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <!--<item name="android:actionOverflowButtonStyle">@style/OverflowButtonStyle</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--去掉阴影-->
        <!-- remove shadow below action bar -->
        <item name="android:elevation">0dp</item>
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="android:textColorPrimary">@color/colorWindowBackground</item>
        <item name="android:textColorSecondary">@color/colorWindowBackground</item>
        <item name="actionMenuTextColor">@color/colorTextColorPrimary</item>
    </style>

    <!-- 页面菜单条目 -->
    <style name="item_layout">
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- 分享popWindow界面统一样式 -->
    <style name="share_popwindow_ll" parent="@style/layout_widthfilled_style">
        <item name="android:background">@drawable/selector_btn</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/layout_Margin_10</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/line_color</item>
    </style>

</resources>
